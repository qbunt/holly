    <h2>Controls</h2>

    {# Text Input #}
    {{
      render.component(
        'Styleguide/SG_Card/sg-card', {
          id: 'text-input',
          title: 'Text Input',
          markup: '
<input type="text" placeholder="Input text...">
<input type="text" placeholder="Disabled input" disabled>
<input type="text" placeholder="Readonly input" readonly>'
        }
      )
    }}

    {# Password Input #}
    {{
      render.component(
        'Styleguide/SG_Card/sg-card', {
          id: 'password-input',
          title: 'Password Input',
