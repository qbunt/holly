      render.component(
        'Styleguide/SG_Card/sg-card', {
          id: 'basic-table',
          title: 'Basic Table',
          markup: '
<table class="table">
  <caption>Optional table caption.</caption>
  <thead>
      <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
      </tr>
  </thead>
