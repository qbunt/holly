{% import './macros/render.twig' as render %}
{% extends './layout/default.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="css/styleguide.css">
{% endblock %}

{% block content %}

<div class="page-wrapper">
  <div class="grid-container">
    <h1>Styleguide</h1>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laudantium, nisi.</p>

    <h2>Typography</h2>
    <div id="headings" class="sg-card">
      <header class="sg-card-header">
        <a href="#headings" class="sg-card-anchor">#</a>
        <h3>Headings</h3>
      </header>
      <div class="sg-card-elements">
        <h1>Heading 1</h1>
        <h2>Heading 2</h2>
        <h3>Heading 3</h3>
        <h4>Heading 4</h4>
        <h5>Heading 5</h5>
        <h6>Heading 6</h6>
      </div> {# .sg-card-elements #}
      <div class="sg-card-code">
        <pre>
          &lt;h1&gt;Heading 1&lt;/h1&gt;
          &lt;h2&gt;Heading 2&lt;/h2&gt;
          &lt;h3&gt;Heading 3&lt;/h3&gt;
          &lt;h4&gt;Heading 4&lt;/h4&gt;
          &lt;h5&gt;Heading 5&lt;/h5&gt;
          &lt;h6&gt;Heading 6&lt;/h6&gt;
        </pre>
      </div> {# .sg-card-code #}
    </div> {# .sg-card #}

  </div> {# .grid-container #}
</div> {# .page-wrapper #}

{% endblock %}

{% block scripts %}
<script src="js/styleguide.js"></script>
{% endblock %}
